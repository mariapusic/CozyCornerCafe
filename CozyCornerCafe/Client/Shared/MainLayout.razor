@inherits LayoutComponentBase

<div class="page">
	<main>
		<nav class="text-light navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark py-3 bg-opacity-75 border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<h2>
					<a><i class="fa-solid fa-mug-hot"></i> Cozy Corner Café</a>
				</h2>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
				        aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1 justify-content-end">
						<li class="nav-item">
							<a class="nav-link h5 pe-3" href="">Startsida</a>
						</li>
						<li class="nav-item">
							<NavLink class="nav-link h5 pe-3" href="WorkdayMenu">Meny</NavLink>
						</li>
						@if (DateTime.Now.DayOfWeek == DayOfWeek.Saturday || DateTime.Now.DayOfWeek == DayOfWeek.Sunday)
						{
							<li class="nav-item">
								<a class="nav-link h5 pe-3" href="WeekendMenu">Helgmeny</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</nav>

		<article class="content px-4">
			@Body
		</article>
	</main>
	
</div>
